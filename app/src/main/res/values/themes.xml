<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotesApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorPrimary">@color/rose</item>
        <item name="colorSecondary">@color/dark_pink</item>
        <item name="colorSurface">@color/dark_pink</item>
        <item name="colorOnSurface">@color/dark_pink</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Material3</item>
        <item name="buttonBarPositiveButtonStyle">@style/MaterialAlertDialog.Material3</item>
        <item name="buttonBarNegativeButtonStyle">@style/MaterialAlertDialog.Material3</item>
    </style>
</resources>